
node{

try {
 
 properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')), [$class: 'JobLocalConfiguration', changeReasonComment: 'building with scripted way'], pipelineTriggers([pollSCM('* * * * *')])])

def mavenHome = tool name: 'maven3.8.6'
//tool name: is predefined keyword to specify path of the 'tools' dir
// again it adds maven.3.8.6 and the end. so full path will be
// like -> /var/lib/jenkins/tools/hudson.maven_installtion/maven.3.8.6
// since exutable r in bin dir so will add /bin/ at end. check in build stage 

//feching code from github
stage ('CheckoutCode'){
git branch: 'development', credentialsId: '46487f97-71f7-41ca-a371-1b6777350b63', url: 'https://github.com/mithun-tech-org/maven-web-application.git'
}

//build
stage('Build'){
sh "${mavenHome}/bin/mvn clean package"
}

//execute sonarqube report
stage('ExecuteSonarQubeReport'){
sh "${mavenHome}/bin/mvn sonar:sonar"
}

//upload artifact into nexus
stage('UploadArtifactIntoNexus'){
sh "${mavenHome}/bin/mvn deploy"
}

//deploy app to tomcat server
stage('deployapp'){
sshagent(['98267573-190b-400f-9f65-8d5f7c52ddfa']) {
    sh "scp -o StrictHostKeyChecking=no  target/maven-web-application.war ec2-user@172.31.38.13:/opt/apache-tomcat-9.0.68/webapps/"
}
}

}//try closing

 catch (e) {
 currentBuild.result = "FAILURE"
 }//catch closing
 
 finally {
 sendSlackNotifications(currentBuild.result)
 }
 
} // node closing

// slack notifications func from stack overflow (https://stackoverflow.com/questions/39140191/how-to-send-slack-notification-after-a-jenkins-pipeline-build-failed)
def sendSlackNotfications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESSFUL'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    colorName = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESSFUL') {
    colorName = 'GREEN'
    colorCode = '#00FF00'
  } else {
    colorName = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}

